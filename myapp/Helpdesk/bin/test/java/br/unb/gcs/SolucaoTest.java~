package br.unb.gcs;


import static org.junit.Assert.*;
import br.unb.gcs.model.Chamado;
import br.unb.gcs.model.Solucao;

import org.joda.time.DateTime;
import org.junit.Test;

public class SolucaoTest {

	@Test
	public void newSolucao() {
		
		DateTime data = new DateTime();
		Chamado chamado = new Chamado();
		Solucao solucao = new Solucao(1,chamado,"Solucao um foi feita",data.plusDays(1));
				
		assertNotNull(solucao);
		assertEquals(1, solucao.getId());
		assertEquals("Solucao um foi feita", solucao.getDescricao());
		assertEquals(new DateTime().getDayOfYear()+1, solucao.getData().getDayOfYear());
	}

}
